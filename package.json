{
    "name": "biomed",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "yarn server & next dev --turbopack",
        "dev:test": "yarn server:test & next dev --turbopack",
        "build": "next build",
        "start": "yarn server & next start",
        "lint": "next lint",
        "test": "jest && playwright test",
        "test:e2e": "yarn with-env playwright test",
        "test:e2e-report": "playwright show-report",
        "test:unit-report": "jest --collect-coverage",
        "test:e2e-ui": "yarn playwright test --ui",
        "clean": "git clean -xdf .next  node_modules",
        "lint:fix": "next lint --fix",
        "test:unit": "jest",
        "test:watch": "jest --watch",
        "format:check": "prettier . --check ",
        "format": "prettier . --write ",
        "server": "node server.js --watch",
        "server:test": "node test-server.js --watch"
    },
    "dependencies": {
        "json-server": "0.17.0",
        "next": "15.4.5",
        "react": "19.1.0",
        "react-dom": "19.1.0"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3",
        "@playwright/test": "^1.54.1",
        "@tailwindcss/postcss": "^4",
        "@testing-library/dom": "^10.4.1",
        "@testing-library/jest-dom": "^6.6.4",
        "@testing-library/react": "^16.3.0",
        "@testing-library/react-hooks": "^8.0.1",
        "@testing-library/user-event": "^14.6.1",
        "@types/jest": "^30.0.0",
        "@types/jest-axe": "^3.5.9",
        "@types/node": "^20",
        "@types/react": "^19",
        "@types/react-dom": "^19",
        "eslint": "^9",
        "eslint-config-next": "15.4.5",
        "eslint-config-prettier": "^10.1.8",
        "jest": "^30.0.5",
        "jest-axe": "^10.0.0",
        "jest-environment-jsdom": "29.7.0",
        "prettier": "3.6.2",
        "tailwindcss": "^4",
        "ts-node": "^10.9.2",
        "typescript": "^5"
    }
}
